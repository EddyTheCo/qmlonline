/*
* Shows the use of the settings button and shaders
* from the https://github.com/EddyTheCo/MyDesigns library
*/

import QtQuick.Controls
import QtQuick
import MyDesigns
import CustomStyle 1.0

Item
{
    anchors.fill:parent
    
    Component.onCompleted:
    {
        CustomStyle.midColor1="blu"
    }
    Rectangle
    {
        id:popup
        visible:butt.animate
        width:(parent.width-2.0*butt.width)*0.9
        height:parent.height*0.6
        color:"#0f171e"
        border.width: 2
        border.color: "#0f79af"
        anchors.horizontalCenter:parent.horizontalCenter
        anchors.verticalCenter:parent.verticalCenter
        radius:20
        Label {
            text: "The library can be found <a href='https://github.com/EddyTheCo/MyDesigns'>here</a>"
            anchors.centerIn: parent
            width:parent.width*0.95
            color:"white"
            onLinkActivated: (link) => Qt.openUrlExternally(link)
            wrapMode:Text.WrapAnywhere
            horizontalAlignment: Text.AlignHCenter
        }
    }
    MySettButton
    {
        id:butt

        onClicked: {
            animate=!animate;
        }
        text:"Settings"
        anchors.left:parent.left;
        anchors.verticalCenter:parent.verticalCenter
        width: 120
        height:40
    }

}

